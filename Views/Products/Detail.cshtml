@model BangazonDelta.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div class="row">
    <div class="col-md-4">@Html.DisplayFor(model => model.Description)</div>
    <div class="col-md-4">$@Html.DisplayFor(model => model.Price)</div>
    <div class="col-md-4"><a asp-area="" asp-controller="Order" asp-action="Purchase" asp-route-id="@Model.UserId">Purchase</a></div>
</div>

<div>
    Seller: @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
</div>

<div>
    &lt;&lt; <a asp-action="Index">Back to List</a>
</div>
