@model BangazonDelta.Models.User

<h2>Create a New Account</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label">First Name: </label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label">Last Name: </label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>